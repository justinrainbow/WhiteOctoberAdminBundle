<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Field Guessers -->
        <parameter key="white_october_admin.field_guesser.mandango.class">WhiteOctober\AdminBundle\DataManager\Mandango\Guesser\MandangoFieldGuesser</parameter>
    </parameters>

    <services>
        <!-- Field Guessers -->
        <service id="white_october_admin.field_gueser.mandango" class="%white_october_admin.field_guesser.mandango.class%">
            <tag name="white_october_admin.field_guesser" alias="mandango" />
            <argument type="service" id="mandango.metadata_factory" />
        </service>

        <!-- Actions -->
        <service id="white_october_admin.action_collection.mandango.crud" class="WhiteOctober\AdminBundle\DataManager\Mandango\Action\CRUDActionCollection" public="false">
            <tag name="white_october_admin.action_collection" />
        </service>
    </services>

</container>
